<!DOCTYPE html>
<html>

<head>
    <title>CodeGenie</title>
    <link rel='stylesheet' href='/stylesheets/style.css' />
    <link href="/libraries/bootstrap-min.css" rel="stylesheet">
    <script src="/libraries/Angular-min.js"></script>
    <script type="text/javascript" src="javascripts/angularApp.js"></script>
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/1.11.3/jquery.min.js"></script>
    <script src="/libraries/bootstrap-min.js"></script>
    <script src="//cdnjs.cloudflare.com/ajax/libs/angular-ui-router/0.2.8/angular-ui-router.min.js"></script>

    <!-- We use client cookies to save the user credentials -->
    <script src="//code.angularjs.org/1.2.16/angular-cookies.min.js"></script>

    <!-- Auth0 Lock script and AngularJS module -->
    <script src="//cdn.auth0.com/js/lock-7.12.min.js"></script>
    <!-- angular-jwt and angular-storage -->
    <script type="text/javascript" src="//cdn.rawgit.com/auth0/angular-storage/master/dist/angular-storage.js"></script>
    <script type="text/javascript" src="//cdn.rawgit.com/auth0/angular-jwt/master/dist/angular-jwt.js"></script>

    <script src="https://cdn.auth0.com/w2/auth0-angular-4.js"></script>

    <!-- Setting the right viewport -->
    <meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=no" />
</head>

<body ng-app="CodeGenie">
    <div class="container-fluid">
        <div class="row">
            <header class="col-xs-12">
                <nav class="navbar navbar-inverse navbar-fixed-top">
                    <div class="container">
                        <div class="navbar-header">
                            <a class="navbar-brand" href="#/blabla">CodeGenie</a>
                        </div>
                        <div ng-controller='authctrl' id="navbar" class="collapse navbar-collapse">
                            <ul class="nav navbar-nav">
                                <li><a href="#Home">Home</a></li>
                                <li><a href="#About">About</a></li>
                                <li><a href="#Contact">Contact</a></li>
                                <li ng-show="auth.profile.user_metadata.isAdmin"><a href="#Admin">Admin</a></li>
                                <li ng-hide="!auth.isAuthenticated"><a href="#Indienen">Indienen</a></li>
                            </ul>
                            <a ng-hide="auth.isAuthenticated"  ng-click="login()" class="btn btn-success pull-right">Sign in</a>{{}}
                            <a ng-hide="!auth.isAuthenticated"  ng-click="logout()" class="btn btn-success pull-right">Sign out</a>

                        </div>
                        <!--/.nav-collapse -->

                    </div>
                </nav>

            </header>
        </div>
        <div class="row">
            <main class="col-xs-8">
                <div ui-view>
                
                </div>
            </main>
        </div>
        <hr>
        <div class="row">
            <footer class="col-xs-12" align="right">
                &copy; Kenny en Jente</br>
                <span class="label label-default">CodeGenieSite</span></h3>
            </footer>
        </div>
    </div>
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/1.11.3/jquery.min.js"></script>
    <script>
        $(".nav li a").on("click", function() {
            $(".nav").find(".active").removeClass("active");
            $(this).parent().addClass("active");
        });
    </script>
</body>

</html>
